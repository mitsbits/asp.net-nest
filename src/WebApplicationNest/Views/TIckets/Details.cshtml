@using WebApplicationNest.Models
@model Ticket
@{
    ViewData["Title"] = Model.Id == Guid.Empty?"New":Model.Subject;

}
<h2>@ViewData["Title"]</h2>
<form asp-action="Post" asp-controller="Tickets" Method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        @if (Model.Id == Guid.Empty)
        {
            <label asp-for="Subject"></label>
            <input asp-for="Subject" class="form-control" />
        }
        else
        {
            <input type="hidden" asp-for="Subject" />
            <label>@Model.Subject</label>
        }
    </div>
    <div class="form-group">
        <label asp-for="Body"></label>
        <textarea asp-for="Body" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Priority"></label>
        <select asp-for="Priority" asp-items="@Html.GetEnumSelectList(typeof(Priority))">
        </select>
    </div>
    <div class="form-group">
        <label asp-for="ReportedOn"></label>
        <input asp-for="ReportedOn" class="form-control" readonly="readonly" />
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-default">Subit</button>
    </div>
</form>